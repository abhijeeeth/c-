#include <iostream>

void printPattern(int n) {
    for (int i = 1; i <= n; i++) {
        for (int j = 1; j <= i; j++) {
            std::cout << "*";
        }
        std::cout << std::endl;
    }
}

void printPattern(char c, int n) {
    for (int i = 1; i <= n; i++) {
        for (int j = 1; j <= i; j++) {
            std::cout << c;
        }
        std::cout << std::endl;
    }
}

void printPattern(char c, int n, bool isTriangle) {
    for (int i = 1; i <= n; i++) {
        for (int j = 1; j <= n - i; j++) {
            std::cout << " ";
        }
        for (int j = 1; j <= i; j++) {
            std::cout << c;
        }
        std::cout << std::endl;
    }
}

void printSquare(char c, int n) {
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++) {
            std::cout << c;
        }
        std::cout << std::endl;
    }
}

void printRhombus(char c, int n) {
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n - i - 1; j++) {
            std::cout << " ";
        }
        for (int j = 0; j < (i * 2) + 1; j++) {
            std::cout << c;
        }
        std::cout << std::endl;
    }
}

int main() {
    int n = 5;
    std::cout<<"\nTriangle pattern"<<std::endl;
    printPattern('*', n, true);
    std::cout<<"\nReverse Triangle pattern"<<std::endl;
    printPattern('*', n);
    std::cout<<"\nSquare pattern"<<std::endl;
    printSquare('*',n);
    std::cout<<"\nRhombus pattern"<<std::endl;
    printRhombus('*',n);
    std::cout<<"\nTriangle with character pattern"<<std::endl;
    printPattern('#', n);
    return 0;
}
