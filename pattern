#include <iostream.h>
#include<conio.h>

void printPattern(int n) {
    for (int i = 1; i <= n; i++) {
	for (int j = 1; j <= i; j++) {
	    cout << "*";
	}
	cout<<endl;
    }
}

void printPattern(char c, int n) {
    for (int i = 1; i <= n; i++) {
	for (int j = 1; j <= i; j++) {
	    cout << c;
	}
	cout <<endl;
    }
};
/*
