{
    for (int i = 1; i <= n; i++) {
	for (int j = 1; j <= n - i; j++) {
	    cout << " ";
	}
	for (int j = 1; j <= i; j++) {
	    cout << c;
	}
	cout << std::endl;
    }
}
  */
void printSquare(char c, int n) {
    for (int i = 0; i < n; i++) {
	for (int j = 0; j < n; j++) {
	    cout << c;
	}
	cout <<endl;
    }
}

void printRhombus(char c, int n) {
    for (int i = 0; i < n; i++) {
	for (int j = 0; j < n - i - 1; j++) {
	    cout << " ";
	}
	for (int k = 0; k < (i * 2) + 1; k ++) {
	    cout << c;
	}
	cout <<endl;
    }
}

void main() {
    int n = 5;
    cout<<"\nTriangle pattern"<<endl;
   // printPattern('*', n, true);
    cout<<"\nReverse Triangle pattern"<<endl;
    printPattern('*', n);
    cout<<"\nSquare pattern"<<endl;
    printSquare('*',n);
    cout<<"\nRhombus pattern"<<endl;
    printRhombus('*',n);
    cout<<"\nTriangle with character pattern"<<endl;
    printPattern('#', n);
    getch();
}
